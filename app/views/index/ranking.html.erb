<style type="text/css" media="screen">
  .team-ranking-list {margin-top: 34px;}
</style>

<h2 class="text-center">Teams Ranking</h2>

<ul class="list-group team-ranking-list">
  <% @ranking_list.each_with_index do |team, index| %>
    <li class="list-group-item">
      <span class="badge"><%= index+1 %></span>
      <strong class="text-info"><%= team.name %></strong> (<%= team.current_score %>)
    </li>
  <% end %>
</ul>

<%= link_to "next", index_screen_url, class: "hidden link-to-next-page" %>

<script type="text/javascript" charset="utf-8">
  window.setTimeout(function(){
    window.location.href = $( ".link-to-next-page" ).attr("href");
  },3000);
</script>
